# Database Configuration
MONGODB_URI=mongodb://localhost:27017/thai-learning
JWT_SECRET=your-secret-key-here

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# AI Service Configuration
# ------------------------
# 1. Claude AI (Recommended for highest accuracy)
# Uses Visual Prompting with Dataset References
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# 2. Typhoon OCR (Alternative)
# Faster but less accurate for handwriting validation
TYPHOON_API_KEY=your-typhoon-api-key-here
TYPHOON_API_URL=https://api.opentyphoon.ai/v1/ocr
USE_TYPHOON_OCR=false

# 3. YOLO Model (Legacy)
# Local object detection model
USE_YOLO=false
USE_ML_MODEL=false
